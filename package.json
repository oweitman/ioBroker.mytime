{
  "name": "iobroker.mytime",
  "version": "2.2.0",
  "description": "This adapter handle Time (eg: countdown,etc.)",
  "author": {
    "name": "oweitman",
    "email": "oweitman@gmx.de"
  },
  "homepage": "https://github.com/oweitman/ioBroker.mytime",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "mytime",
    "timeseries",
    "countdown timer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oweitman/ioBroker.mytime.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "@iobroker/types": "^7.0.7",
    "@types/node": "^24.0.8",
    "axios": "^1.12.2",
    "dayjs": "^1.11.18",
    "rrule": "^2.8.1",
    "suncalc3": "^2.0.5",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/build-tools": "^2.0.15",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.1.1",
    "@iobroker/vis-2-widgets-react-dev": "^4.0.4",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^24.4.0",
    "@types/react": "^17.0.83",
    "@types/react-dom": "^17.0.25",
    "alcalzone-shared": "^5.0.0",
    "mocha": "^11.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "~5.9.3"
  },
  "bugs": {
    "url": "https://github.com/oweitman/ioBroker.mytime/issues"
  },
  "main": "main.js",
  "files": [
    "admin/",
    "lib/",
    "widgets/**/!(tsconfig|tsconfig.*|.eslintrc|en).json",
    "widgets/**/*.{html,css,png,svg,jpg}",
    "widgets/**/build/*.{js,map}",
    "widgets/**/lib/*.{js,map}",
    "!widgets/node_modules/**",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:declarations": "tsc -p test/lib/TS/tsconfig.json && tsc -p test/lib/JS/tsconfig.json",
    "test:javascript": "node node_modules/mocha/bin/mocha --exit",
    "test": "npm run test:package",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "build:admin": "node tasks --default",
    "build:widgets": "cd widgets/mytime && npm run build",
    "build": "npm run build:widgets && npm run build:admin",
    "prepublishOnly": "node tasks.js",
    "release": "release-script --all",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "translate": "translate-adapter",
    "update-packages": "ncu --upgrade && cd src && ncu --upgrade && cd ../src-admin && ncu --upgrade",
    "npm": "npm i -f && cd src-admin && npm i -f",
    "lint": "eslint -c eslint.config.mjs .",
    "repochecker": "npx github:oweitman/ioBroker.repochecker https://github.com/oweitman/ioBroker.mytime --local --noinfo",
    "translate-admin-deletekey": "node ./src-admin/bin/translate.js deletekey 'xx,xx'",
    "translate-admin": "node ./bin/translate.js --source src-admin/src/i18n",
    "translate-widgets": "node ./bin/translate.js --source widgets/mytime/i18n/en.json --format single"
  },
  "readmeFilename": "README.md"
}
